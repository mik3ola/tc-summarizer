{
  "manifest_version": 3,
  "name": "TermsDigest",
  "version": "0.2.0",
  "description": "Understand Terms & Conditions instantly. Hover over legal links to get AI summaries highlighting costs, cancellation, and red flags.",
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "options_page": "src/options.html",
  "action": {
    "default_title": "TermsDigest",
    "default_popup": "src/options.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "homepage_url": "https://termsdigest.com"
}
